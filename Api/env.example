# CONFIGURACIÓN DEL SERVIDOR
API_VERSION=v1
PORT=4000
NODE_ENV=development

# CONFIGURACIÓN DE CORS
CORS_ORIGIN=*
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# CONFIGURACIÓN DE RATE LIMITING
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_MESSAGE=Demasiadas peticiones desde esta IP, intenta de nuevo más tarde.

# CONFIGURACIÓN DE LOGGING
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=false
LOG_FILE_PATH=./logs/app.log

# CONFIGURACIÓN DE SEGURIDAD
JWT_SECRET=secret-key
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12
ENABLE_HELMET=true

# CONFIGURACIÓN DE ENVÍO
SHIPPING_BASE_COST=8000
FREE_SHIPPING_THRESHOLD=200000
STRATUM_1_MULTIPLIER=0.5
STRATUM_2_MULTIPLIER=0.7
STRATUM_3_MULTIPLIER=0.8
STRATUM_4_MULTIPLIER=1.0
STRATUM_5_MULTIPLIER=1.2
STRATUM_6_MULTIPLIER=1.5

# CONFIGURACIÓN DE DESCUENTOS POR VOLUMEN
# Descuento: Cantidad mínima y porcentaje
VOLUME_DISCOUNT_1_QTY=10
VOLUME_DISCOUNT_1_PCT=5
VOLUME_DISCOUNT_2_QTY=25
VOLUME_DISCOUNT_2_PCT=10
VOLUME_DISCOUNT_3_QTY=50
VOLUME_DISCOUNT_3_PCT=15
VOLUME_DISCOUNT_4_QTY=100
VOLUME_DISCOUNT_4_PCT=20

# CONFIGURACIÓN DE DESCUENTOS POR MONTO TOTAL
# Descuento: Monto mínimo y porcentaje
AMOUNT_DISCOUNT_1_MIN=100000
AMOUNT_DISCOUNT_1_PCT=5
AMOUNT_DISCOUNT_2_MIN=250000
AMOUNT_DISCOUNT_2_PCT=10
AMOUNT_DISCOUNT_3_MIN=500000
AMOUNT_DISCOUNT_3_PCT=15
AMOUNT_DISCOUNT_4_MIN=1000000
AMOUNT_DISCOUNT_4_PCT=20

# CONFIGURACIÓN DE DESCUENTOS POR ESTRATO
STRATUM_DISCOUNT_1=10
STRATUM_DISCOUNT_2=8
STRATUM_DISCOUNT_3=5

# CONFIGURACIÓN DE MONITOREO
ENABLE_METRICS=false
METRICS_PORT=9090
ENABLE_HEALTH_CHECK=true
